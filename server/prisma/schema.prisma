
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



// Enums

enum Gender {
  MASCULINO
  FEMENINO
}

enum Dicipules {
  SI
  NO
}

enum LevelDicipules {
  I
  II
  III
  IV
}

enum WayPay {
  EFECTIVO
  TRANSFERENCIA
}

enum Pay {
  PAGO
  DEBE
}

enum Role {
  USER
  LIDER
  ADMIN
} 


// tablas 

model User {
  id              String    @id @default(uuid())
  email           String?    @unique
  name            String?
  number          String?    @unique
  password        String?
  happybirth      DateTime?
  gender          Gender?
  isActive        Boolean   @default(true)
  baptized        Boolean   @default(false)
  dicipules       Dicipules @default(SI)
  role            Role      @default(USER) // valores posibles: user, lider, admin
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  address         String?
  age             Int?
  hobbies         String?
  dreams          String?
  job             String?
  vulnerable_area String?
  members         Members[]    // un User puede tener muchos Members
  usersEvent      UsersEvent[] // Un usuario puede ir a muchos eventos
}

model Groups {
  id          String    @id @default(uuid())
  name        String     @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  members     Members[] // un Group puede tener muchos Members
  sessions    Session[]
}

model Members {
  id             String         @id @default(uuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  groupId        String
  group          Groups         @relation(fields: [groupId], references: [id])
  levelDicipules LevelDicipules
  joinedAt       DateTime       @default(now())

  @@unique([userId, groupId]) // un usuario solo puede estar una vez en un grupo
}

model UsersEvent {
  id            String    @id @default(uuid())
  userId        String?              
  eventId       String               
  name          String
  email         String
  dateBorn      DateTime
  wayPay        WayPay?
  phone         String?
  paymentAmount Float     @default(0)
  payStatus     Pay       @default(DEBE)
  createdAt     DateTime  @default(now())
  hasSiblings   Boolean   @default(false)

  user  User?  @relation(fields: [userId], references: [id])
  event Event  @relation(fields: [eventId], references: [id])

  @@map("users_event")
}

model Event {
  id          String        @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  usersEvent  UsersEvent[]
}

model Session {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        DateTime @default(now())
  groupId     String
  group       Groups   @relation(fields: [groupId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}





