generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Gender {
  MASCULINO
  FEMENINO
}

enum Dicipules {
  SI
  NO
}

enum LevelDicipules {
  I
  II
  III
  IV
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  name       String?
  number     String?
  password   String?
  happybirth DateTime?
  gender     Gender?
  baptized Boolean   @default(false)
  isActive   Boolean   @default(true)
  dicipules  Dicipules @default(NO)
  role       String    @default("user")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  address    String?
  age        Int?
  service_area String? @default("Servidor")
  hobbies    String?
  dreams     String?
  job       String? 
  vulnerable_area String?
  members Members[]
}

model Groups {
  id        String   @id @default(uuid())
  name      String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  members   Members[]
}

model Members {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  group     Groups[]
  groupId   String
  levelDicipules LevelDicipules
  joinedAt  DateTime @default(now())
}


