generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


// Enums

enum Gender {
  MASCULINO
  FEMENINO
}

enum Dicipules {
  SI
  NO
}

enum LevelDicipules {
  I
  II
  III
  IV
}

enum WayPay {
  EFECTIVO
  TRANSFERENCIA
}

enum Pay {
  PAGO
  DEBE
}


// tablas 

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  name            String?
  number          String?
  password        String?
  happybirth      DateTime?
  gender          Gender?
  baptized        Boolean   @default(false)
  isActive        Boolean   @default(true)
  dicipules       Dicipules @default(NO)
  role            String    @default("user")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  address         String?
  age             Int?
  service_area    String?   @default("Servidor")
  hobbies         String?
  dreams          String?
  job             String?
  vulnerable_area String?
  members         Members[]    // un User puede tener muchos Members
  usersEvent      UsersEvent[] // Un usuario puede ir a muchos eventos
}

model Groups {
  id          String    @id @default(uuid())
  name        String     @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  members     Members[] // un Group puede tener muchos Members
}

model Members {
  id             String         @id @default(uuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  groupId        String
  group          Groups         @relation(fields: [groupId], references: [id])
  levelDicipules LevelDicipules
  joinedAt       DateTime       @default(now())

  @@unique([userId, groupId]) // un usuario solo puede estar una vez en un grupo
}

model UsersEvent {
  id            String   @id @default(uuid())
  userId        String?              
  eventId       String               
  name          String
  email         String
  dateBorn      DateTime
  wayPay        WayPay
  paymentAmount Float
  payStatus     Pay      @default(DEBE)
  createdAt     DateTime @default(now())

  user  User?  @relation(fields: [userId], references: [id])
  event Event  @relation(fields: [eventId], references: [id])

  @@map("users_event")
}

model Event {
  id          String        @id @default(uuid())
  title       String
  description String?
  eventDate   DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  usersEvent  UsersEvent[]
}







